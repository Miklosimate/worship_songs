<?xml version='1.0' encoding='UTF-8'?>
<song xmlns="http://openlyrics.info/namespace/2009/song" version="0.8" createdIn="OpenLP 2.4.6" modifiedIn="OpenLP 2.4.6" modifiedDate="2021-02-17T16:06:54">
  <properties>
    <titles>
      <title>Odaadom Neked - akkordos</title>
    </titles>
    <authors>
      <author>Pintér Béla</author>
    </authors>
  </properties>
  <lyrics>
    <verse name="v1a">
      <lines>A-----------------A4--------<br/>Odaadom Neked mindenemet,</lines>
    </verse>
    <verse name="v1b">
      <lines>A-----------------A2---------------D/A<br/>Amit akarsz, cselekedd meg most velem,</lines>
    </verse>
    <verse name="v1c">
      <lines>D/F#----------------A<br/>Legyen, ahogy akarod!</lines>
    </verse>
    <verse name="v2a">
      <lines>A---------------------A4-----<br/>Kicseiddel töltsd meg életemet,</lines>
    </verse>
    <verse name="v2b">
      <lines>A----------------------A2--------D/A<br/>Adj nekem látást, hogy ne tévedjek el!</lines>
    </verse>
    <verse name="v2c">
      <lines>D/F#------------------A<br/>Újítsd meg friss keneted!</lines>
    </verse>
    <verse name="p1a">
      <lines>E---------D-------------E-------------A<br/>Formálj át engem, hogy hasonlítsak Rád!</lines>
    </verse>
    <verse name="p1b">
      <lines>E--------------D-----C#m-----D-------E<br/>Drága Szentlelkeddel gyere közel hozzám!</lines>
    </verse>
    <verse name="c1a">
      <lines>-----A---------------A/C#-<br/>Egy pillantásod, ha megtalál,</lines>
    </verse>
    <verse name="c1b">
      <lines>----D------------E-----------<br/>Az többet jelent minden szónál,</lines>
    </verse>
    <verse name="c1c">
      <lines>A-------------A/C#------D-E<br/>Jelenléted, ha eláraszt engem.</lines>
    </verse>
    <verse name="c1d">
      <lines>-----A---------A/C#-----<br/>Egy villanás dicsőségedből,</lines>
    </verse>
    <verse name="c1e">
      <lines>---D---------E------------<br/>És újjá lesz minden bennem,</lines>
    </verse>
    <verse name="c1f">
      <lines>A---------A/C#-----------D<br/>Jézus vérén át jövök hozzád,</lines>
    </verse>
    <verse name="c1g">
      <lines>-------E-----------A-<br/>Tüzed ég a szívemben!</lines>
    </verse>
  </lyrics>
</song>
