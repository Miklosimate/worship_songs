<song xmlns="http://openlyrics.info/namespace/2009/song" version="0.8" createdIn="OpenLP 2.4.6" modifiedIn="OpenLP 2.4.6" modifiedDate="2023-03-29T16:20:12">
  <properties>
    <titles>
      <title>En hirdetem</title>
    </titles>
    <authors>
      <author>ismeretlen sz.</author>
    </authors>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>Én hirdetem az élő Úr dicséretét!<br/>Értem halt meg, feláldozta az életét.</lines>
    </verse>
    <verse name="v2a">
      <lines>Örökké Ő az Úr, <br/>Mint Bárány ül a trónon!</lines>
    </verse>
    <verse name="v2b">
      <lines>Meghajtom térdemet és<br/>Őt magasztalom!</lines>
    </verse>
  </lyrics>
</song>
