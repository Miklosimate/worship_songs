  <properties>
    <titles>
      <title>Az Úr irgalma végtelen - akkordos</title>
    </titles>
    <authors>
      <author>Ismeretlen</author>
    </authors>
  </properties>
  <lyrics>
    <verse name="i1">
      <lines>D-G-D-D-Dsus4</lines>
    </verse>
    <verse name="v1a">
      <lines>-----D----------G/D-D<br/>Az Úr irgalma végtelen,</lines>
    </verse>
    <verse name="v1b">
      <lines>-----D----------A/D<br/>Ezt folyton érzem én.</lines>
    </verse>
    <verse name="v1c">
      <lines>-----D-----D/F#---G-------D<br/>Habár nincs semmi érdemem,</lines>
    </verse>
    <verse name="v1d">
      <lines>D---A/D----------D<br/>Ő mégis hord kezén.</lines>
    </verse>
    <verse name="v2a">
      <lines>D-------G/D---------------D<br/>Nincs arra szó, sem gondolat,</lines>
    </verse>
    <verse name="v2b">
      <lines>D------------A/D<br/>Mi jóval áld az Úr,</lines>
    </verse>
    <verse name="v2c">
      <lines>D------D/F#----G--------D<br/>Ha lankadok, Ő szárnyat ad,</lines>
    </verse>
    <verse name="v2d">
      <lines>D--------A/D-------D<br/>És terhem mind lehull.</lines>
    </verse>
    <verse name="c1a">
      <lines>------------G-------------D/F#<br/>Láncom lehullt, szabad vagyok,</lines>
    </verse>
    <verse name="c1b">
      <lines>-------------G--------A-A/H-A/C#<br/>Mert az Úr veszni, el nem hagyott.</lines>
    </verse>
    <verse name="c1c">
      <lines>-----------G------A-----Hm<br/>Kegyelme tartja meg életem,</lines>
    </verse>
    <verse name="c1d">
      <lines>----------Em--A--------D<br/>Az Úr irgalma oly végtelen.</lines>
    </verse>
    <verse name="v3a">
      <lines>D-G/D-D<br/>Sok itt a bűn és küzdelem,</lines>
    </verse>
    <verse name="v3b">
      <lines>D-A/D<br/>Az orkán zúgva dúl,</lines>
    </verse>
    <verse name="v3c">
      <lines>D---------D/F#------G-----D<br/>De minden vészben, tengeren</lines>
    </verse>
    <verse name="v3d">
      <lines>D---------A/D-------D<br/>Magtart, megvéd az Úr.</lines>
    </verse>
    <verse name="v4a">
      <lines>D---------G/D------D<br/>Ha véget ér az életem,</lines>
    </verse>
    <verse name="v4b">
      <lines>D----------------A/D<br/>Új otthont nyújt az ég,</lines>
    </verse>
    <verse name="v4c">
      <lines>D---------------D/F#-------G----D<br/>Ott még szebb hangon zenghetem</lines>
    </verse>
    <verse name="v4d">
      <lines>D------A/D----D<br/>A Bárány énekét.</lines>
    </verse>
    <verse name="b1a">
      <lines>------G-----------D/F#<br/>Uram irgalmazz nekünk,</lines>
    </verse>
    <verse name="b1b">
      <lines>-----------Em-----------A<br/>Krisztus kegyelmezz nekünk,</lines>
    </verse>
    <verse name="b1c">
      <lines>------G------------D/F#<br/>Uram irgalmazz nekünk,</lines>
    </verse>
    <verse name="b1d">
      <lines>----------Em------A-------D<br/>Krisztus kegyelmezz nekünk!</lines>
    </verse>
  </lyrics>
</song>
