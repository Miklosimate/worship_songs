  <properties>
    <titles>
      <title>Áldjátok az Urat</title>
    </titles>
    <verseOrder>v1 v2</verseOrder>
    <authors>
      <author>ismeretlen szerző</author>
    </authors>
    <songbooks>
      <songbook name="Sárga könyv" entry="41"/>
      <songbook name="Kék könyv" entry="19"/>
    </songbooks>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>Áldjátok az Urat,<br/>áldjátok szent nevét!<br/>Kik házában álltok napról-napra,<br/>dicsérjétek szüntelen Őt!</lines>
    </verse>
    <verse name="v2">
      <lines>Tárjátok kezeitek az élő Isten felé!<br/>Áldjon meg téged Sionból az Úr,<br/>ragyogtassa arcát reád!</lines>
    </verse>
  </lyrics>
</song>
