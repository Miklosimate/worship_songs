    <titles>
      <title>Jöjj Szentlélek, szállj ránk</title>
    </titles>
    <verseOrder>v1</verseOrder>
    <authors>
      <author type="words">Rettegi Zsolt</author>
      <author type="music">Rettegi Zsolt</author>
    </authors>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>Jöjj Szentlélek, szállj ránk,<br/>örök boldog fénysugár!<br/>Vezesd életem a szűk ösvényen,<br/>segítsd levetni régi ruhám!</lines>
    </verse>
  </lyrics>
