<song xmlns="http://openlyrics.info/namespace/2009/song" version="0.8" createdIn="OpenLP 2.4.6" modifiedIn="OpenLP 2.4.6" modifiedDate="2021-03-10T15:34:22">
  <properties>
    <titles>
      <title>Ó te vagy, Uram - akkordos</title>
    </titles>
    <authors>
      <author>Ismeretlen</author>
    </authors>
  </properties>
  <lyrics>
    <verse name="c1a">
      <lines>---A----------D--A--------D---A-F-A<br/>Ó, Te vagy, Uram vágyam és örömöm.</lines>
    </verse>
    <verse name="c1b">
      <lines>-C--D-H-D-E-E<br/>Te vigyázol rám.</lines>
    </verse>
    <verse name="v1a">
      <lines>A--------D---------A<br/>Mikor az Úr ránk talált,</lines>
    </verse>
    <verse name="v1b">
      <lines>D-----------------------A-<br/>Úgy tűnt, mintha álmodnánk.</lines>
    </verse>
    <verse name="v1c">
      <lines>--C-------------------G-<br/>Szánk megtelt nevetéssel</lines>
    </verse>
    <verse name="v1d">
      <lines>----D----H-E-G-E-E7<br/>És nyelvük ujjongással.</lines>
    </verse>
    <verse name="v2a">
      <lines>A--------D---------A<br/>Hatalmasat tett velünk,</lines>
    </verse>
    <verse name="v2b">
      <lines>D---------------------A-<br/>Szívünkből örvendezzünk,</lines>
    </verse>
    <verse name="v2c">
      <lines>--C-------------------G-<br/>Kik könnyek között vetnek,</lines>
    </verse>
    <verse name="v2d">
      <lines>----D----H-E-G-E--E7<br/>Vigadva kévét szednek.</lines>
    </verse>
  </lyrics>
</song>
