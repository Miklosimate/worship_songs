<?xml version='1.0' encoding='UTF-8'?>
<song xmlns="http://openlyrics.info/namespace/2009/song" version="0.8" createdIn="OpenLP 2.4.6" modifiedIn="OpenLP 2.4.6" modifiedDate="2020-12-22T14:03:53">
  <properties>
    <titles>
      <title>Barátom lettél</title>
    </titles>
    <verseOrder>v1 c1 v2</verseOrder>
    <authors>
      <author>ismeretlen</author>
    </authors>
  </properties>
  <lyrics>
    <verse name="v1">
      <lines>Barátom lettél, több vagy, mint egy testvér.<br/>Szívemben még él, mikor megérintettél.</lines>
    </verse>
    <verse name="c1">
      <lines>Jézus, Jézus, Jézus, örök Barát!</lines>
    </verse>
    <verse name="v2">
      <lines>Reményem lettél, hűséged oly érték.<br/>Szívem törne szét, ha egymást elveszítnénk!</lines>
    </verse>
  </lyrics>
</song>
