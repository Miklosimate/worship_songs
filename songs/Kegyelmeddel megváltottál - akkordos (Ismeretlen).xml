  <lyrics>
    <verse name="v1a">
      <lines>C4---------C--C2-------C<br/>Kegyelmeddel megváltottál,</lines>
    </verse>
    <verse name="v1b">
      <lines>Am----------------------<br/>Irgalmaddal új életre hívtál.</lines>
    </verse>
    <verse name="v1c">
      <lines>----F--------------C-------G4-G<br/>Körbevesz mindennap szerelmed.</lines>
    </verse>
    <verse name="v2a">
      <lines>C4---------C-----C2---------C<br/>Hűséged megújul minden reggel,</lines>
    </verse>
    <verse name="v2b">
      <lines>Am-----------------------<br/>Elárasztasz békességeddel.</lines>
    </verse>
    <verse name="v2c">
      <lines>-----F-------------C-------G4-G<br/>Körbevesz mindennap szerelmed.</lines>
    </verse>
    <verse name="p1a">
      <lines>-------C-----B--------F<br/>Arcod fénye rám ragyog,</lines>
    </verse>
    <verse name="p1b">
      <lines>-----C-----B--F----<br/>Teljesen Tiéd vagyok!</lines>
    </verse>
    <verse name="c1a">
      <lines>------G-----F---C-------G-F-C-<br/>Felkelek és hirdetem dicsőséged!</lines>
    </verse>
    <verse name="c1b">
      <lines>-----G----------F---Am<br/>Azért élek, hogy áldjalak,</lines>
    </verse>
    <verse name="c1c">
      <lines>---------F-----G------C<br/>Nagy Király, élő Isten Fia!</lines>
    </verse>
    <verse name="c2a">
      <lines>------G------F----C----------G-F----C<br/>Angyalaid a trón körül zengik, szent vagy!</lines>
    </verse>
    <verse name="c2b">
      <lines>------G----F-----Am<br/>Egyetlen hatalmas Úr, </lines>
    </verse>
    <verse name="c2c">
      <lines>-----F-------G-C<br/>Éneklik, halleluja!</lines>
    </verse>
    <verse name="c2d">
      <lines>C--------Am-----F-C-G4-G<br/>Halleluja! Halleluja! Halleluja!</lines>
    </verse>
