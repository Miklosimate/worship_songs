<?xml version='1.0' encoding='UTF-8'?>
<song xmlns="http://openlyrics.info/namespace/2009/song" version="0.8" createdIn="OpenLP 2.4.6" modifiedIn="OpenLP 2.4.6" modifiedDate="2021-03-03T15:49:21">
  <properties>
    <titles>
      <title>A te méltóságod csendjében - akkordos</title>
    </titles>
    <authors>
      <author>Ismeretlen</author>
    </authors>
  </properties>
  <lyrics>
    <verse name="v1a">
      <lines>D------------------C------<br/>A Te méltóságod csendjében,</lines>
    </verse>
    <verse name="v1b">
      <lines>D----------------C-----<br/>szentséged fenségében,</lines>
    </verse>
    <verse name="v1c">
      <lines>D----------------C-----<br/>dicsőséged nyugalmában</lines>
    </verse>
    <verse name="v1d">
      <lines>Em---D--------------C-<br/>hadd halljam meg hangod!</lines>
    </verse>
    <verse name="v2a">
      <lines>D------------------C----<br/>Ölelj körül engem teljesen,</lines>
    </verse>
    <verse name="v2b">
      <lines>D-------------------C---<br/>hadd érezzem bensőmben</lines>
    </verse>
    <verse name="v2c">
      <lines>D---------------C---<br/>a Te kedves jelenléted,</lines>
    </verse>
    <verse name="v2d">
      <lines>Em---D--------------C-<br/>hadd halljam meg hangod!</lines>
    </verse>
    <verse name="p1">
      <lines>Em-------D------------C------D------G-<br/>Lágyan csengő, szelíd suttogásod, Atyám!</lines>
    </verse>
    <verse name="c1a">
      <lines>G-----------Am-------Em------C----D--<br/>Úgy vágyom Eléd állni, jelenlétedben lenni,</lines>
    </verse>
    <verse name="c1b">
      <lines>G---------D------------C---------D<br/>és Téged dícsérni egyedül, szüntelen.</lines>
    </verse>
    <verse name="c1c">
      <lines>G----------Am-------<br/>Kezeimet nyújtom Feléd,</lines>
    </verse>
    <verse name="c1d">
      <lines>---Em----------C------D<br/>az életem már csak a Tiéd!</lines>
    </verse>
    <verse name="c1e">
      <lines>Em----D--------------C-<br/>Hadd halljam meg hangod!</lines>
    </verse>
  </lyrics>
</song>
